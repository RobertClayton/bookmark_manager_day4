Want to add a new link?
<form action='/links/new' method='get'>
  <input type='submit' value="Add link">
</form>
<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      <b>Title:</b> <%= link.title %>
    <br>
      <b>URL:</b>   <%= link.url   %>
    <br>
      <b>Tags:</b>   <%= link.tags.map(&:name).each { |x| x }  %>
    </li>
    <br>
    <br>
  <% end %>
</ul>
